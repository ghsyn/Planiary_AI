<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plant1"
    tools:context=".AiActivity">

    <ImageView
        android:id="@+id/plantcapture_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:srcCompat="@drawable/plant"
         />

    <TextView
        android:id="@+id/plantcapture_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식물이름"
        android:textSize="40sp"
        android:layout_below="@+id/plantcapture_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ff"

        />

    <TextView
        android:id="@+id/plantcapture_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="찾는 식물이 맞는거 같습니까?"
        android:textSize="25sp"
        android:layout_below="@+id/plantcapture_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:id="@+id/plantcapture_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/plantcapture_request"
        android:orientation="horizontal">

        <Button
            android:id="@+id/plantcapture_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YES"
            android:layout_marginRight="15dp"
            android:backgroundTint="#396834"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/plantcapture_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO"
            android:backgroundTint="#396834"
            android:textStyle="bold"
            />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/plantcapture_back"
        android:text="Take picture"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/plantcapture_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#396834"
        android:insetBottom="0dp"
        android:text="돌아가기"
        android:textStyle="bold" />

</RelativeLayout>